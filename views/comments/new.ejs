<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">
            Add new comments for <%= campgrounds.name %>
        </h1>
        <div style="width:30%;margin:20px auto;">
            <form
                action="/campgrounds/<%= campgrounds._id %>/comment"
                method="POST"
            >
                <div class="form-group">
                    <input
                        class="form-control"
                        placeholder="text"
                        name="comment[text]"
                        type="text"
                    />
                </div>
                <div class="form-group">
                    <button
                        class="btn btn-lg btn-default btn-block btn-primary"
                    >
                        Submit
                    </button>
                    <a href="/campgrounds">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
