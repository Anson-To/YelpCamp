<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">
            Form for having the new campsite
        </h1>
        <div style="width:30%;margin:20px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input
                        class="form-control"
                        placeholder="Name"
                        name="name"
                        type="text"
                    />
                </div>
                <div class="form-group">
                    <input
                        class="form-control"
                        placeholder="URL"
                        name="imageUrl"
                        type="text"
                    />
                </div>
                <div class="form-group">
                    <input
                        class="form-control"
                        placeholder="description"
                        name="description"
                        type="text"
                    />
                </div>
                <div class="form-group">
                    <button
                        class="btn btn-lg btn-default btn-block btn-primary"
                    >
                        Submit
                    </button>
                    <a href="/campgrounds">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
